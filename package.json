{
  "name": "asciidoc-suite",
  "displayName": "Asciidoc Suite",
  "description": "Asciidoc文書の執筆から出力まで一貫したワークフローを提供する統合開発環境",
  "version": "0.1.0",
  "publisher": "asciidoc-suite",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "asciidoc",
    "documentation",
    "plantuml",
    "diagram"
  ],
  "activationEvents": [
    "onLanguage:asciidoc",
    "workspaceContains:**/*.adoc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "asciidocSuite.createProject",
        "title": "Create New Project",
        "category": "Asciidoc"
      },
      {
        "command": "asciidocSuite.buildHtml",
        "title": "Build HTML",
        "category": "Asciidoc"
      },
      {
        "command": "asciidocSuite.exportArchive",
        "title": "Export Archive",
        "category": "Asciidoc"
      }
    ],
    "views": {
      "asciidocSuite": [
        {
          "id": "asciidocActions",
          "name": "アクション",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "asciidocSuite",
          "title": "Asciidoc Suite",
          "icon": "$(book)"
        }
      ]
    },
    "configuration": {
      "title": "Asciidoc Suite",
      "properties": {
        "asciidocSuite.build.outputFormat": {
          "type": "array",
          "default": [
            "html"
          ],
          "description": "出力形式の設定",
          "items": {
            "type": "string",
            "enum": [
              "html",
              "pdf",
              "epub"
            ]
          }
        },
        "asciidocSuite.build.stylesheet": {
          "type": "string",
          "default": "style.css",
          "description": "使用するスタイルシートファイル（プロジェクトルートからの相対パス）"
        },
        "asciidocSuite.build.stylesheetPath": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "project-root", "same-directory"],
          "description": "スタイルシートの検索方法: auto(自動検出), project-root(プロジェクトルート), same-directory(入力ファイルと同じディレクトリ)"
        },
        "asciidocSuite.build.enableDiagrams": {
          "type": "boolean",
          "default": true,
          "description": "図表機能を有効にする"
        },
        "asciidocSuite.build.useDocker": {
          "type": "boolean",
          "default": true,
          "description": "Dockerコンテナを使用してAsciidoctorを実行する（推奨）"
        },
        "asciidocSuite.build.dockerImage": {
          "type": "string",
          "default": "asciidoctor/docker-asciidoctor",
          "description": "使用するAsciidoctor Dockerイメージ"
        },
        "asciidocSuite.build.outputDirectory": {
          "type": "string",
          "default": "./output",
          "description": "出力ディレクトリ"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "asciidocSuite.buildHtml",
          "when": "resourceExtname == .adoc",
          "group": "asciidoc"
        }
      ],
      "commandPalette": [
        {
          "command": "asciidocSuite.buildHtml",
          "when": "workspaceHasAsciidocFiles"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.1"
  }
}
